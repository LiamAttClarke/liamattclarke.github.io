<!DOCTYPE html>
<html lang="en">

<head>
  <title>{{title}} - Resume</title>
  {{> head}}
  <link rel="stylesheet" href="/styles/resume.css">
</head>

<body>
  <div class="page page--resume">
    <div class="page__header">
      <a href="/" class="link flex items-center gap-2"><span class="icon-[mdi--arrow-left]"></span> Home</a>
      <a class="link print-link flex items-center gap-2" href="#" onclick="window.print();">Print this page <span
          class="icon-[mdi--printer]"></span></a>
    </div>
    <div class="resume">
      <header class="flex place-content-between mb-5">
        <div class="left">
          <h1 class="font-medium text-2xl">{{title}}</h1>
          <h3 class="text-md">{{tagline}}</h3>
        </div>
        <div class="right contact-details">
          <a href="mailto:{{email}}">{{email}}<span class="icon-[mdi--email-outline]"></span></a>
          <a href="{{siteUrl}}">{{siteUrl}}<span class="icon-[mdi--web]"></span></a>
          <div>
      </header>
      <section class="mb-2">
        <h2 class="font-medium text-lg">Experience</h2>
        <hr class="mb-5" />
        {{#each resume.experience}}
        <div class="experience my-4">
          <header class="mb-2">
            <h3 class="text-base flex place-content-between">
              <div class="font-medium">{{client}}</div>
              <div>{{start}} - {{#if end}}{{end}}{{else}}Present{{/if}}</div>
            </h3>
            <h3>{{title}}</h3>
          </header>
          {{#each projects}}
          <section class="project mb-2">
            <h4 class="mb-1"><span class="font-medium">{{name}}</span> - <i
                class="project__description">{{description}}</i></h4>
            <ul class="list-disc pl-5">
              {{#each achievements}}
              <li>{{.}}</li>
              {{/each}}
            </ul>
          </section>
          {{/each}}
        </div>
        {{/each}}
      </section>
      <section class="mb-2">
        <h2 class="font-medium text-lg">Technical Skills</h2>
        <hr class="mb-5" />
        <ul>
          {{#each resume.skills}}
          <li><span class="font-medium">{{label}}:</span>
            <ul class="inline-list">{{#values}}<li>{{.}}</li>{{/values}}
          </li>
        </ul>
        </li>
        {{/each}}
        </ul>
      </section>
    </div>
  </div>
</body>

</html>
