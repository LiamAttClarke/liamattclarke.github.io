<!DOCTYPE html>
<html lang="en">
<head>
  <title>{{title}} - Resume</title>
  {{> head}}
  <link rel="stylesheet" href="/styles/resume.css">
</head>
<body>
  <div class="page page--resume">
    <div class="page__header">
      <a href="/" class="flex items-center gap-2"><span class="icon-[mdi--arrow-left]"></span> Home</a>
      <a class="print-link flex items-center gap-2" href="#" onclick="window.print();">Print this page <span class="icon-[mdi--printer]"></span></a>
    </div>
    <div class="resume">
      <header class="flex place-content-between mb-5">
        <div class="left">
          <h1 class="font-medium text-2xl">{{title}}</h1>
          <h3 class="text-md">{{tagline}}</h3>
        </div>
        <div class="right contact-details">
          <a href="mailto:{{email}}">{{email}}<span class="icon-[mdi--email-outline]"></span></a>
          <a href="{{siteUrl}}">{{siteUrl}}<span class="icon-[mdi--web]"></span></a>
        <div>
      </header>
      <section class="mb-2">
        <h2 class="font-medium text-lg">Technical Skills</h2>
        <hr class="mb-5" />
        <ul>
          {{#resume.skills}}
          <li><span class="font-medium">{{label}}:</span> <ul class="inline-list">{{#values}}<li>{{.}}</li>{{/values}}</li></ul></li>
          {{/resume.skills}}
        </ul>
      </section>
      <section class="mb-2">
        <h2 class="font-medium text-lg">Experience</h2>
        <hr class="mb-5" />
        {{#resume.experience}}
        <div class="experience my-5">
          <header class="flex place-content-between items-center mb-2">
            <h3 class="font-medium text-base">{{title}}{{#client}}&nbsp;-&nbsp;{{client}}{{/client}}</h3>
            <h3 class="font-medium">{{start}} - {{#end}}{{end}}{{/end}}{{^end}}Present{{/end}}</h3>
          </header>
          {{#projects}}
          <section class="project">
            <h4 class="font-medium mb-1">{{name}} - <i class="project__description">{{description}}</i></h4>
            <ul class="list-disc pl-5">
              {{#achievements}}
              <li>{{.}}</li>
              {{/achievements}}
            </ul>
          </section>
          {{/projects}}
        </div>
        {{/resume.experience}}
      </section>
    </div>
  </div>
</body>
</html>
